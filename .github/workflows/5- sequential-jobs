name: Zad4 - Serial jobs

on:
  workflow_dispatch: # MANUAL TRIGGER
   
jobs:
  display-current-date:
    runs-on: ubuntu-latest
    steps:
      - name: Print current date
        run: |
          echo "Current date"
          echo $(date +'%Y-%m-%dT%H-%M-%S')
          
  display-env-info:
    needs: [display-current-date]
    runs-on: ubuntu-latest
    steps:
      - name: Print system info
        run: |
          echo "Running job on:"
          echo ${{ runner.os }}
        
